<div class="container_login">
	<div class="card">
		<div class="login_padding"></div>
		<div class="login_logo">
			<img src="../images/logo_bitter_512.png">
		</div>
		<div class="login_welcome">Welcome to Bitter!</div>
		<div class="login_message"><TMPL_VAR NAME=MESSAGE></div>
		<form action="bitter.cgi" method="post">
			<input type="text" 		class="login_input" 	name="username" placeholder="username">
			<input type="password" 	class="login_input" 	name="password" placeholder="password">
			<input type="submit" 	class="login_submit"	name="submit"	value="Login" hidefocus="true"/>
		</form>
		<p class="login_signup"><a href="bitter.cgi?page=about">About</a> | <span class="login_selected">Login</span> | <a href="bitter.cgi?page=signup">Signup</a></p>
		<p class="login_forgot"><a href="bitter.cgi?page=forgot">Forgot Password?</a></p>
		<div class="login_padding"></div>
	</div>
</div>
