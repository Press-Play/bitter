<div class="container_login">
	<div class="card">
		<div class="login_padding"></div>
		<div class="login_logo">
			<img src="/images/logo_bitter_512.png">
		</div>
		<div class="login_welcome">Welcome to Bitter!</div>
		<form action="bitter.cgi" method="post">
			<input type="text" 		class="login_input" 	name="email" 	placeholder="email">
			<input type="text" 		class="login_input" 	name="username" placeholder="username">
			<input type="password" 	class="login_input" 	name="password" placeholder="password">
			<input type="submit" 	class="login_submit"	name="submit"	value="Signup" hidefocus="true"/>
		</form>
		<a class="login_signup" href="bitter.cgi?page=login"><p>Login</p></a>
		<div class="login_padding"></div>
	</div>
</div>